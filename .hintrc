{
  "connector": {
    "name": "puppeteer",
    "options": {
      "puppeteerOptions": {
        "headless": true
      }
    }
  },
  "extends": ["web-recommended", "accessibility"],
  "parsers": ["css", "html", "javascript"],
  "formatters": ["codeframe", "summary"],
  "hints": {
    "ssllabs": "off",
    "validate-set-cookie-header": "off",
    "html-checker": [
      "error",
      {
        "details": true,
        "ignore": [
          "The text content of element “time” was not in the required format: The literal did not satisfy the time-datetime format.",
          "Attribute “x-data” not allowed on element “main” at this point.",
          "Attribute “x-for” not allowed on element “template” at this point.",
          "Attribute “x-data” not allowed on element “form” at this point.",
          "Attribute “x-data” not allowed on element “li” at this point.",
          "Attribute “x-data” not allowed on element “input” at this point.",
          "Attribute “@change” not allowed on element “input” at this point.",
          "Attribute “x-on:change” not allowed on element “input” at this point.",
          "Attribute “@change” not allowed on element “select” at this point.",
          "Attribute “x-bind:disabled” not allowed on element “select” at this point.",
          "Attribute “@click” not allowed on element “input” at this point.",
          "Attribute “x-bind:checked” not allowed on element “input” at this point.",
          "Attribute “x-bind:value” not allowed on element “input” at this point.",
          "Attribute “x-bind:disabled” not allowed on element “input” at this point.",
          "Attribute “x-show” not allowed on element “div” at this point.",
          "Attribute “x-show” not allowed on element “a” at this point.",
          "Attribute “x-ref” not allowed on element “span” at this point.",
          "Attribute “x-ref” not allowed on element “textarea” at this point.",
          "Attribute “x-bind:disabled” not allowed on element “textarea” at this point.",
          "Attribute “x-bind:disabled” not allowed on element “button” at this point.",
          "Attribute “x-bind:selected” not allowed on element “option” at this point.",
          "Attribute “@click.prevent” not allowed on element “button” at this point.",
          "Attribute “x-on:click.prevent” not allowed on element “a” at this point.",
          "Attribute “x-text” not allowed on element “a” at this point.",
          "Attribute “x-data” not allowed on element “li” at this point.",
          "Attribute “x-on:click.prevent” is not serializable as XML 1.0.",
          "Attribute “@change” is not serializable as XML 1.0.",
          "Attribute “@click.prevent” is not serializable as XML 1.0.",
          "Attribute “@click” is not serializable as XML 1.0.",
          "Attribute “x-bind:selected” is not serializable as XML 1.0.",
          "Attribute “x-bind:disabled” is not serializable as XML 1.0.",
          "Attribute “x-bind:value” is not serializable as XML 1.0.",
          "Attribute “x-bind:href” is not serializable as XML 1.0.",
          "Attribute “x-on:change” is not serializable as XML 1.0.",
          "Attribute “x-bind:datetime” is not serializable as XML 1.0.",
          "Attribute “x-bind:checked” is not serializable as XML 1.0."
        ]
      }
    ],
    "compat-api/css": [
      "error",
      {
        "ignore": ["-webkit-text-size-adjust", "overflow-wrap: anywhere"]
      }
    ],
    "compat-api/html": [
      "error",
      {
        "ignore": ["img[loading]"]
      }
    ],
    "http-cache": "off",
    "http-compression": "off",
    "no-disallowed-headers": [
      "warning",
      {
        "ignore": ["X-Frame-Options"]
      }
    ],
    "no-html-only-headers": [
      "warning",
      {
        "ignore": ["Content-Security-Policy", "x-xss-protection"]
      }
    ]
  }
}
